@model List<PizzaShop.Entity.ViewModels.MenuItemViewModel>

@foreach (var item in Model)
{
    <tr>
        <td>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
            </div>
        </td>
        <td class="d-flex align-items-center">
            <span class="me-2">
                <img src="./images/dining-menu.png" alt="dining-menu" class="dining-menu-icon" /></span><span>
                @item.Name
            </span>
        </td>
        <td>
            <div class="">
                if(@item.Type)
                {
                <img src="./images/icons/veg-icon.svg" alt="veg-icon" />
                }
                else
                {
                <img src="./images/icons/non-veg-icon.svg" alt="veg-icon" />
                }
            </div>
        </td>
        <td>@item.Rate</td>
        <td>@item.Quantity</td>
        <td>
            <div class="form-check form-switch">
                <input class="form-check-input switch-btn" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
            </div>
        </td>
        <td>
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fa-solid fa-pen me-3"></i>
            </button>
            <button type="button" class="btn" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fa-regular fa-trash-can"></i>
            </button>
        </td>
    </tr>
}